# Read more about SSH config files: https://linux.die.net/man/5/ssh_config

Host *
    Port 22
    Compression yes
    ForwardAgent no
    ForwardX11 no
    ForwardX11Trusted yes
    ServerAliveInterval 60
    ServerAliveCountMax 30
    IdentityFile ~/.ssh/id_rsa

# Configurations for home server

Host home.*
    IdentityFile ~/.ssh/id_ed25519

Host home.user
    HostName 192.168.1.100
    User jonas

Host home.root
    HostName 192.168.1.100
    User root

## Configurations for WebTech server(s)

Host iu.*
    IdentityFile ~/.ssh/id_webtech

Host iu.pages
    HostName ssh-pages.iu.edu
    User jonmcclu

Host iu.sitehost
    HostName ssh.sitehost.iu.edu
    User jonmcclu

Host iu.sitehost-test
    HostName ssh.sitehost-test.iu.edu
    User jonmcclu

Host iu.sitehost.wsshrly
    HostName ssh.sitehost.iu.edu
    User wsshrly

Host iu.sitehost-test.wsshrly
    HostName ssh.sitehost-test.iu.edu
    User wsshrly

## Repository Configurations
# -- repositories should be cloned with these configurations

Host gitlab.*
    IdentitiesOnly yes

Host gitlab.dotfiles
    Hostname gitlab.com
    User jonmcclu1
    IdentityFile ~/.ssh/id_gitlab

Host gitlab.videoencoding
    Hostname gitlab.com
    User jonmcclu1
    IdentityFile ~/.ssh/id_gitlab
